{
  "name": "Twitch Bottom Chat",
  "description": "Makes the chat to the bottom of the player. Useful for a small window. Fills the remaining height space of the page.",
  "version": "1.0.4",
  "manifest_version": 3,
  "icons": {
    "16": "16.png",
    "32": "38.png",
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "service_worker": "background.js", 
    "type": "module"
  },
  "minimum_chrome_version": "92",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_icon": {
      "16": "16.png",
      "32": "38.png"
    }
  },
  "options_page": "options.html"
}